<html>
    <head>
        <title ><%=Heading%></title>
        <link rel="stylesheet" type="text/css" href="./index.css" /> 
    </head>
    <body>
        <div id="container">
            <div id="menu_bar" style="background-color: green; line-height: 22px;">
                <div id="home-menu" data-content="home-content_container">Home</div>
                <div id="file-menu" data-content="file-content_container">File</div>
                <div id="data-menu" data-content="data-content_container">Data</div>                
            </div>
            <div id="menu_content_container">
                <div class="menu-contaner" id="file-content_container">
                     <div id="new" style="cursor: pointer;">New</div>
                    <div id="save" style="cursor: pointer;">Save</div>
                    <div id="open" style="cursor: pointer;">Open</div>
                </div>
                <div class="menu-contaner" id="data-content_container" >data</div>
                <div class="menu-contaner" id="home-content_container">
                    <div class="menu-group" id="font-menu_container">
                        <div class="menu-row">
                            <select id="font-family">
                                <option value="Georiga">Georiga</option>
                                <option value="Arial">Arial</option>
                                <option value="Impact">Impact</option>
                                <option value="Tahoma">Tahoma</option>
                            </select>
                            <select id="font-size">
                                <option value="8">8</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="14">14</option>
                            </select>
                        </div>
                        <div class="menu-row">
                            <input id="bold" type="button" value="B">
                            <input id="italic" type="button" value="I">
                            <input id="underline" type="button" value="U">
                            <input id="bg-color" type="color" value="#FFFFFF">
                            <input id="text-color" type="color" value="#000000">
                        </div>
                    </div>
                    <div class="menu-group" id="aligment-menu_container">
                        <div class="menu-row">
                            <input id="top-align" type="button" prop-val="top" class="valgin" value="T">
                            <input id="middle-align" type="button" prop-val="middle" class="valgin" value="M">
                            <input id="bottom-align" type="button" prop-val="bottom" class="valgin" value="B">
                        </div>
                        <div class="menu-row">
                            <input id="left-align" type="button" prop-val="left" class="halign" value="L">
                            <input id="right-align" type="button" prop-val="right" class="halign" value="R">
                            <input id="center-align" type="button" prop-val="center" class="halign" value="C">
                        </div>
                    </div>
                   
                </div> 
            </div>
            <div id="formula_bar">
                <input id="cellFormula" readonly="true">
                <div id="seprator">fx:</div>
                <input id="txtFormula">
            </div>
            <div id="content_container">
                <div id="tl-cell"></div>
                <div id = "first-row">
                    <% for(let x = 1; x < cols; x++) { %>
                        <div class="cell">  <%= String.fromCharCode('A'.charCodeAt(0) + x - 1) %></div>
                    <% } %>
                </div>
                <div id="first-col">
                    <% for(let x = 1; x < rows; x++) { %>
                        <div class="cell"><%= x %></div>
                    <% } %>
                </div>
                <div id="grid">
                    <% for(let x = 1; x < rows; x++) { %>
                        <div class="row">
                            <% for(let j = 1; j < cols; j++) { %>
                                <div class="cell" contenteditable="true" rid="<%=x - 1%>" cid="<%=j - 1%>"></div>
                            <%} %>
                        </div>
                    <% } %>
                </div>
            </div>
            <div id="sheets_bar">
                <div id="add">sheet 1</div>
                <div>+</div>
            </div>
        </div>
        <script src="index.js"></script>
    </body>
</html>